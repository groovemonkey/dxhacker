<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>Your Hacker Console</title>
<!--[if IE]>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
<link rel="stylesheet" href="css/app.css">
</head>

<body>
	<h1>Your Console:</h1>

	<div id="console">
		<% $gamestate.transaction(true) do
			@game = $gamestate[:gameobj]
		   end
		%>

		<%= @game.console %>
	</div>

	<div id="input">
		<form>
			<input id="textinput" type="text">
			<input id="submitcommand" type="button" value="Enter">
		</form>
	</div>




<script type="text/javascript" src="js/jquery.js"></script>
<script type="text/javascript" src="js/app.js"></script>
<script>
	(function() {
		"use strict";

    var submit = $('#submitcommand'),
        textinput = $('#textinput');

    submit.on('click', function() {
        var command = textinput.val();
        window.location = "/play/command/" + command;
		});
}());
</script>


</body>
</html>